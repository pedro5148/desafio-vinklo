
<p style="color: black"><%= notice %></p>
<div class="container">
<h1>Desafio Vinklo</h1>
<h1>Usuarios</h1>

<div id="search-form">
  <%= form_tag(users_path, method: :get) do %>
    <div class="field">
      <%= text_field_tag :search, params[:search], placeholder: "Digite seu texto..." %>
      <%= submit_tag "Pesquisar" %>
    </div>
  <% end %>
</div>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Mostrar este usuario", user %>
    </p>
  <% end %>
</div>


<%= link_to "Novo usuario", new_user_path %>
</div>